<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Nayvid.Gemini.Speech</PackageId>
    <Version>0.1.0-preview.1</Version>
    <Authors>Nayvid</Authors>
    <Company>Nayvid</Company>
    <Description>Speech to text and text to speech client components for Nayvid Gemini SDK.</Description>
    <PackageTags>gemini;ai;speech;audio;tts;stt</PackageTags>
    <RepositoryUrl>https://github.com/Nayvid/Gemini</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <NoWarn>CS1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Nayvid.Gemini.Core\Nayvid.Gemini.Core.csproj" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
  </ItemGroup>
</Project>
